<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="map_class_notify" model="odoosoft.wechat.enterprise.map">
            <field name="code">class_notify.plan_swtich</field>
        </record>

        <record id="message_template_plan_switch" model="odoosoft.wechat.enterprise.message.template">
            <field name="name">微信课程调换提醒</field>
            <field name="title">课程调换提醒</field>
            <field name="content">
原课程: ${object.origin_plan.name_get()[0][1]}
调换到: ${object.target_plan.name_get()[0][1]}
状态: ${fields['state'].convert_to_export(object.state, ctx)}
            </field>
        </record>

        <record id="message_template_plan_notify" model="odoosoft.wechat.enterprise.message.template">
            <field name="name">微信课程信息提醒</field>
            <field name="title">课程信息提醒</field>
            <field name="content">
班级: ${object.classroom.name}
节数: 第${object.lesson.name}节课
课程: ${object.subject.name}
任课老师: ${object.teacher.name}
            </field>
        </record>
    </data>
</openerp>