<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="action_timetable_sheet" model="ir.actions.act_window">
            <field name="name">课表展示</field>
            <field name="res_model">school.timetable</field>
            <field name="view_type">form</field>
            <field name="view_mode">qweb</field>
            <field name="target">current</field>
            <field name="view_id" ref="view_school_timetable_qweb"/>
        </record>

        <record id="view_school_timetable_tree" model="ir.ui.view">
            <field name="name">view.school.timetable.tree</field>
            <field name="model">school.timetable</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="semester_id"/>
                </tree>
            </field>
        </record>

        <record id="view_school_timetable_form" model="ir.ui.view">
            <field name="name">view.school.timetable.form</field>
            <field name="model">school.timetable</field>
            <field name="arch" type="xml">
                <form>
                    <group col="1">
                        <group col="4">
                            <field name="semester_id"/>
                            <field name="initial_lesson_type"/>
                        </group>
                        <group col="1">
                            <label for="cell_ids"/>
                            <field name="cell_ids" nolabel="1">
                                <tree editable="top">
                                    <field name="classroom"/>
                                    <field name="subject"/>
                                    <field name="teacher"/>
                                    <field name="week"/>
                                    <field name="lesson"/>
                                </tree>
                            </field>
                            <button name="%(action_timetable_sheet)d" string="课表展示" type="action"/>
                        </group>
                    </group>

                </form>
            </field>
        </record>


