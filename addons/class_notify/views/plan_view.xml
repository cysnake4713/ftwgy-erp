<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_school_plan_form" model="ir.ui.view">
            <field name="name">view.school.timetable.plan.form</field>
            <field name="model">school.timetable.plan</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="classroom" class="oe_inline" placeholder="班级.."/>
                                第<field name="lesson" class="oe_inline" placeholder="..."/>节课
                            </h1>
                            <br/>
                            <h2>
                                <field name="subject" class="oe_inline" placeholder="科目.."/>
                                (<field name="teacher" class="oe_inline" placeholder="教师.."/>)
                            </h2>
                            <br/>
                            <h3>上课时间:
                                <field name="start_datetime" class="oe_inline"/>~
                                <field name="end_datetime" class="oe_inline"/>
                            </h3>
                        </div>
                        <br/>
                        <group class="oe_edit_only">
                            <field name="start_date"/>
                            <field name="lesson_type"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_school_plan_search" model="ir.ui.view">
            <field name="name">课程计划搜索</field>
            <field name="model">school.timetable.plan</field>
            <field name="arch" type="xml">
                <search>
                    <field name="start_date"/>
                    <field name="lesson"/>
                    <field name="classroom"/>
                    <field name="subject"/>
                    <field name="teacher"/>
                    <group expand="0" string="Group By">
                        <filter string="未执行课程" name="future-plan" icon="terp-folder-orange" domain="[('start_date','&gt;=',current_date)]"/>
                        <filter string="班级" icon="terp-folder-orange" context="{'group_by':'classroom'}"/>
                        <filter string="课程" icon="terp-folder-orange" context="{'group_by':'subject'}"/>
                        <filter string="老师" icon="terp-folder-orange" context="{'group_by':'teacher'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_school_plan_calendar" model="ir.ui.view">
            <field name="name">view.school.timetable.plan.calendar</field>
            <field name="model">school.timetable.plan</field>
            <field name="arch" type="xml">
                <calendar date_start="start_datetime" date_stop="end_datetime"
                          display="[subject] [classroom]" color="color_partner_id" event_open_popup="%(view_school_plan_form)s"
                          class="oe_school_plan_calender">
                    <field name="subject"/>
                    <field name="teacher"/>
                    <field name="classroom"/>
                    <field name="color_partner_id"/>
                </calendar>
            </field>
        </record>

        <record id="view_school_plan_tree" model="ir.ui.view">
            <field name="name">view.school.timetable.plan.tree</field>
            <field name="model">school.timetable.plan</field>
            <field name="arch" type="xml">
                <tree colors="grey:start_date &lt; current_date">
                    <field name="start_date"/>
                    <field name="lesson"/>
                    <field name="classroom"/>
                    <field name="subject"/>
                    <field name="teacher"/>
                    <field name="lesson_type"/>
                </tree>
            </field>
        </record>

        <record id="view_school_plan_tree_button" model="ir.ui.view">
            <field name="name">view.school.timetable.plan.tree</field>
            <field name="model">school.timetable.plan</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <tree colors="grey:start_date &lt; current_date">
                    <field name="start_date"/>
                    <field name="lesson"/>
                    <field name="classroom"/>
                    <button icon="stock_calendar" name="button_classroom_related_plan" context="{'classroom':classroom}" type="object"/>
                    <field name="subject"/>
                    <field name="teacher"/>
                    <button icon="stock_calendar" name="button_teacher_related_plan" context="{'teacher':teacher}" type="object"/>
                    <field name="lesson_type"/>
                </tree>
            </field>
        </record>

        <record id="view_school_plan_switch_form" model="ir.ui.view">
            <field name="name">school.timetable.plan.switch.wizard.form</field>
            <field name="model">school.timetable.plan.switch.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="common_apply" string="提交" type="object" class="oe_highlight"
                                states_editable="{'draft':{'users':[origin_plan_teacher]}}"
                                context="{'state':'target_teacher',
                                'message_users':[target_plan_teacher],
                                'message':'提出同您换课,请确认',
                                'wechat_code':['class_notify.plan_swtich'],
                                }"/>

                        <button name="common_apply" string="确认" type="object" class="oe_highlight"
                                states_editable="{'target_teacher':{'users':[target_plan_teacher]}}"
                                context="{'state':'center_confirm',
                                'message_users':[request_center_user],
                                'message':'提出换课申请,请审批',
                                'wechat_code':['class_notify.plan_swtich'],
                                }"/>

                        <button name="switch_plan_confirm" string="审批通过" type="object" class="oe_highlight" is_log="1"
                                states_editable="{'center_confirm':{'users':[request_center_user]}}"
                                />

                        <button name="common_reject" string="取消申请" type="object" states="draft,target_teacher,center_confirm" is_reject="1" is_log="1"
                                context="{'state':'cancel',
                                'message_users':[origin_plan_teacher,target_plan_teacher],
                                'message':'换课申请被取消,请注意课程安排',
                                'wechat_code':['class_notify.plan_swtich'],
                                }"/>
                        <!--<button name="button_switch_plan" type="object" string="课程变换" groups="class_notify.group_class_admin" states="draft"/>-->
                        <!--<button name="button_reverse_plan" type="object" string="恢复" groups="class_notify.group_class_admin" states="confirmed"/>-->
                        <field name="state" widget="statusbar" statusbar_visible="draft,target_teacher,center_confirm,confirmed"/>
                    </header>
                    <sheet>
                        <group invisible="1">
                            <field name="origin_plan_classroom"/>
                            <field name="origin_plan_teacher"/>
                            <field name="target_plan_teacher"/>
                        </group>
                        <group string="调换结果" col="4" states="confirmed">
                            <field name="result_origin_plan" readonly="1"/>
                            <field name="result_target_plan" readonly="1"/>
                        </group>
                        <group string="需要调换的课程" col="4">
                            <field name="origin_plan" required="1" context="{'tree_view_ref': 'class_notify.view_school_plan_tree'}"
                                   domain="[('teacher','=',uid),('start_date','&gt;=',current_date)]"
                                   states_editable="{'draft':True}"/>
                            <field name="target_plan" required="1" context="{'tree_view_ref': 'class_notify.view_school_plan_tree'}"
                                   domain="[('classroom','=',origin_plan_classroom),('start_date','&gt;=',current_date),('teacher','!=',uid)]"
                                   states_editable="{'draft':True}"/>
                        </group>
                        <group>
                            <field name="request_center_user" states_required="draft,target_teacher"
                                   domain="[('groups_id','=',%(class_notify.group_class_switch_manager)d)]"
                                   states_editable="{'draft':True,'target_teacher':True}"/>
                        </group>
                        <group string="审批信息" col="4" states="confirmed">
                            <field name="center_confirm_user" readonly="1"/>
                            <field name="center_confirm_datetime" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_school_plan_switch_tree" model="ir.ui.view">
            <field name="name">school.timetable.plan.switch.wizard.tree</field>
            <field name="model">school.timetable.plan.switch.wizard</field>
            <field name="arch" type="xml">
                <tree colors="grey:state=='cancel'">
                    <field name="origin_plan"/>
                    <field name="target_plan"/>
                    <field name="result_origin_plan"/>
                    <field name="result_target_plan"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>