<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <record id="project.group_project_user" model="res.groups">
            <field name="name">普通老师</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_project_management"/>
        </record>

        <record id="project.group_project_department" model="res.groups">
            <field name="name">部门领导</field>
            <field name="category_id" ref="base.module_category_project_management"/>
            <field name="implied_ids" eval="[(4, ref('project.group_project_user')),(4, ref('project.group_delegate_task'))]"/>
        </record>

        <record id="project.group_project_manager" model="res.groups">
            <field name="name">项目管理员</field>
            <field name="category_id" ref="base.module_category_project_management"/>
            <field name="implied_ids" eval="[(4, ref('project.group_project_user')),(4, ref('project.group_delegate_task'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record model="ir.rule" id="project_user_edit_own_tasks_rule">
            <field name="name">Project/Task: project user: edit own only</field>
            <field name="model_id" ref="model_project_task"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('project.group_project_user'))]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record model="ir.rule" id="project_user_view_other_tasks_rule">
            <field name="name">Project/Task: project user: view other only</field>
            <field name="model_id" ref="model_project_task"/>
            <field name="domain_force">[('user_id','!=',user.id)]</field>
            <field name="groups" eval="[(4,ref('project.group_project_user'))]"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record model="ir.rule" id="project_user_edit_other_department_tasks_rule">
            <field name="name">Project/Task: project department manager: read other only</field>
            <field name="model_id" ref="model_project_task"/>
            <field name="domain_force">[('department_id','not in',[d.id for d in user.department_id])]</field>
            <field name="groups" eval="[(4,ref('project.group_project_department'))]"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record model="ir.rule" id="project_user_edit_department_tasks_rule">
            <field name="name">Project/Task: project department manager: modify own</field>
            <field name="model_id" ref="model_project_task"/>
            <field name="domain_force">[('department_id','in',[d.id for d in user.department_id])]</field>
            <field name="groups" eval="[(4,ref('project.group_project_department'))]"/>
        </record>
    </data>
</openerp>
