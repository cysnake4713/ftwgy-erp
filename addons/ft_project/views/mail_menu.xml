<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="action_project_task_personal" model="ir.actions.act_window">
            <field name="name">我的任务</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="project.view_task_search_form"/>
            <field name="domain">[('user_id','=',uid)]</field>
        </record>

        <record id="action_project_task_department" model="ir.actions.server">
            <field name="name">部门任务</field>
            <field name="state">code</field>
            <field name="condition" eval="True"/>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="code">
                action = self.action_get_department(cr,uid,context=context)
            </field>
        </record>

        <menuitem id="menuitem_mail_project_task" name="任务" parent="mail.mail_feeds_main" sequence="11"/>
        <menuitem id="menuitem_mail_project_task_personal" name="我的任务" parent="menuitem_mail_project_task" sequence="10"
                  action="action_project_task_personal"/>
        <menuitem id="menuitem_mail_project_task_department" name="我的部门任务" parent="menuitem_mail_project_task" sequence="5"
                  action="action_project_task_department" groups="project.group_project_department"/>
    </data>
</openerp>