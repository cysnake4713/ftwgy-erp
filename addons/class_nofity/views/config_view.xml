<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_school_course_tree" model="ir.ui.view">
            <field name="name">view.school.course.tree</field>
            <field name="model">school.course</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_school_class_tree" model="ir.ui.view">
            <field name="name">view.school.class.tree</field>
            <field name="model">school.class</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_school_semester_tree" model="ir.ui.view">
            <field name="name">view.school.semester.tree</field>
            <field name="model">school.semester</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <record id="view_school_semester_form" model="ir.ui.view">
            <field name="name">view.school.semester.form</field>
            <field name="model">school.semester</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="1">
                            <group>
                                <field name="name"/>
                            </group>
                            <group col="4">
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>