<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_project_create_guide_tree" model="ir.ui.view">
            <field name="name">view.project.project.create.guide.tree</field>
            <field name="model">project.project.create.guide</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="is_create_project"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_project_create_guide_form" model="ir.ui.view">
            <field name="name">view.project.project.create.guide.form</field>
            <field name="model">project.project.create.guide</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" readonly="1" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="项目名称"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <div name="options_active">
                            <field name="is_create_project" class="oe_inline"/>
                            <label for="is_create_project" string="流程审批通过后创建项目"/>
                        </div>
                    </div>
                    <group>
                        <label for="description"/>
                        <newline/>
                        <field name="description" nolabel="1"/>
                        <newline/>
                    </group>
                    <group col="1">
                        <field name="plan_id" nolabel="1"/>
                        <label for="task_ids"/>
                        <field name="task_ids" widget="one2many" nolabel="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_project_plan_task_tree" model="ir.ui.view">
            <field name="name">view.project.project.plan.task.tree</field>
            <field name="model">project.project.plan.task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="user_id"/>
                    <field name="reviewer_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="date_deadline"/>
                </tree>
            </field>
        </record>

        <record id="view_project_plan_task_form" model="ir.ui.view">
            <field name="name">view.project.project.plan.task.form</field>
            <field name="model">project.project.plan.task</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="任务名称"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <label for="categ_ids"/>
                        <field name="categ_ids" widget="many2many_tags"/>
                    </div>
                    <group>
                        <group>
                            <field name="department_id"/>
                            <field name="user_id" domain="[('department_id','=',department_id)]"/>
                            <field name="reviewer_id"/>
                        </group>
                        <group>
                            <field name="date_deadline"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                    <group>
                        <label for="description"/>
                        <newline/>
                        <field name="description" nolabel="1"/>
                        <newline/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_project_plan_tree" model="ir.ui.view">
            <field name="name">view.project.project.plan.tree</field>
            <field name="model">project.project.plan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_project_plan_form" model="ir.ui.view">
            <field name="name">view.project.project.plan.form</field>
            <field name="model">project.project.plan</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <label for="tasks"/>
                        <newline/>
                        <field name="tasks" nolabel="1"/>
                        <newline/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</openerp>