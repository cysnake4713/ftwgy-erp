<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_hr_department_tree" model="ir.ui.view">
            <field name="name">hr.department.tree</field>
            <field name="model">hr.department</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_users_form_inherit" model="ir.ui.view">
            <field name="name">res.users.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//h2" position="after">
                    <label for="department_id" class="oe_edit_only"/>
                    <h3>
                        <field name="department_id"/>
                    </h3>
                </xpath>
            </field>
        </record>

        <record id="view_users_tree" model="ir.ui.view">
            <field name="name">view.res.users.tree.department</field>
            <field name="model">res.users</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record id="view_users_tree_inherit" model="ir.ui.view">
            <field name="name">view.res.users.tree.department.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
                <field name="lang" position="replace">
                    <field name="department_id"/>
                </field>
            </field>
        </record>

        <record id="view_users_search" model="ir.ui.view">
            <field name="name">view.res.users.search.department</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_search"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="department_id"/>
                    <field name="email"/>
                </field>
                <field name="company_ids" position="after">
                    <group expand="0" string="Group By">
                        <filter name="by-department" string="éƒ¨é—¨" icon="terp-folder-orange" context="{'group_by':'department_id'}"/>
                    </group>
                </field>
            </field>
        </record>
    </data>
</openerp>